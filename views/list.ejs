<%- include("header") -%>
    
<div class="box" id="heading">
      <h1>It's a <%= kindOfDay %></h1>
    </div>
    <div class="box">
      
      <% newListItem.forEach(element=>{ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" id="" value="<%=element._id%>" name="checkboxName" onchange="this.form.submit()"/>
            <p><%= element.name %></p>
          </div>
        </form>

      <% }) %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newItem"
          id=""
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" name="button">+</button>
      </form>
    </div>

<%- include("footer") -%>